model DataConsent {
  id        String    @id @default(uuid())
  orgUserId String
  scope     String[] // ['fingerprint', 'resumes', 'achievements']
  grantedAt DateTime  @default(now())
  revokedAt DateTime?

  orgUser OrgUser @relation(fields: [orgUserId], references: [id])
}

enum GoalStatus {
  active
  completed
  archived
}

//
// A Goal is now an OUTCOME container.
// Progress is derived from Milestones.
//

enum MilestoneKind {
  manual
  checklist
  keywords_tags
  streak
}

enum EvidenceLinkType {
  auto
  manual
}

model Goal {
  id     String @id @default(cuid())
  userID Int
  user   User   @relation(fields: [userID], references: [id])

  title       String
  description String?

  status      GoalStatus @default(active)
  targetDate  DateTime?
  startedAt   DateTime?
  completedAt DateTime?

  templateKey String?

  progress Int @default(0)

  /// Children of the outcome goal. Each milestone has exactly one tracking kind.
  milestones GoalMilestone[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userID, status])
}

model GoalMilestone {
  id     String @id @default(cuid())
  goalID String
  goal   Goal   @relation(fields: [goalID], references: [id], onDelete: Cascade)

  title       String
  description String?
  order       Int     @default(0)

  /// manual | checklist | keywords_tags | streak
  kind MilestoneKind @default(manual)

  progress    Int @default(0)
  targetCount Int @default(0)

  /**
   * Metric config by kind (v1):
   * manual: {}
   * checklist:
   * { "items": [{ "key": "outline", "label": "Draft outline" }, ...] }
   * (items are also stored in GoalMilestoneChecklistItem rows below; this field can remain {} for checklist)
   * keywords_tags:
   * { "targetCount": 3, "keywords": ["decision","tradeoff"], "tags": ["architecture"] }
   * streak:
   * { "timesPerWeek": 2, "weeks": 6 }
   */
  metricConfig Json @default("{}")

  /// Manual completion (and optional override for other kinds if you choose later)
  completedAt DateTime?

  checklistItems GoalMilestoneChecklistItem[]
  evidence       Evidence[]

  createdAt                  DateTime                     @default(now())
  updatedAt                  DateTime                     @updatedAt
  GoalMilestoneManualState   GoalMilestoneManualState[]
  GoalMilestoneStreakCheckIn GoalMilestoneStreakCheckIn[]

  @@index([goalID, order])
  @@index([goalID, kind])
  @@index([goalID, completedAt])
}

model GoalMilestoneChecklistItem {
  id          String        @id @default(cuid())
  milestoneID String
  milestone   GoalMilestone @relation(fields: [milestoneID], references: [id], onDelete: Cascade)
  key         String
  label       String
  order       Int           @default(0)
  checked     Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([milestoneID, key])
  @@index([milestoneID, order])
}

model Evidence {
  id            String           @id @default(cuid())
  userID        Int
  user          User             @relation(fields: [userID], references: [id])
  milestoneID   String?
  milestone     GoalMilestone?   @relation(fields: [milestoneID], references: [id], onDelete: Cascade)
  kind          MilestoneKind
  linkType      EvidenceLinkType @default(auto)
  matchReason   String?
  achievementID String?
  achievement   Achievement?     @relation(fields: [achievementID], references: [id], onDelete: Cascade)
  occurredAt    DateTime?
  data          Json             @default("{}")
  createdAt     DateTime         @default(now())

  @@index([milestoneID, kind])
  @@index([milestoneID, createdAt])
  @@index([userID, kind])
}

model GoalMilestoneManualState {
  id          String        @id @default(cuid())
  milestoneID String
  milestone   GoalMilestone @relation(fields: [milestoneID], references: [id], onDelete: Cascade)
  userID      Int
  user        User          @relation(fields: [userID], references: [id])
  checked     Boolean       @default(false)
  checkedAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([milestoneID, userID])
  @@index([milestoneID, checked])
}

model GoalMilestoneStreakCheckIn {
  id          String        @id @default(cuid())
  milestoneID String
  milestone   GoalMilestone @relation(fields: [milestoneID], references: [id], onDelete: Cascade)
  userID      Int
  user        User          @relation(fields: [userID], references: [id])
  occurredAt  DateTime      @default(now())
  weekStart   DateTime

  @@unique([milestoneID, userID, weekStart])
  @@index([milestoneID, userID, occurredAt])
  @@index([milestoneID, weekStart])
}
